# EditorConfig is awesome: https://EditorConfig.org
root = true

# Set default charset
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{yml,sh,js,json},Vagrantfile,Dockerfile*]
indent_size = 2
indent_style = space

# 4 space indentation
[*.{py,md,vim}]
indent_size = 4
indent_style = space

[*.md]
max_line_length = 80
trim_trailing_whitespace = false
